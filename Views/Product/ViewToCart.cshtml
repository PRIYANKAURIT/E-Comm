@model IEnumerable<E_Comm.Models.Product>

@{
    ViewData["Title"] = "ViewToCart";
}

<h1>ViewToCart</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.p_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.p_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.c_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.userid)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.p_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.p_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.c_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.userid)
            </td>
            <td>
                @Html.ActionLink("Remove", "RemoveFromCart", new { cid=item.c_id })
            </td>
        </tr>
}
    </tbody>
</table>
